@import "../../../style/skin.wxss";
@import "../../../../../style/public/detail.wxss";


.list {
	width: 100%;
	padding: 20rpx 10rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	display: flex;
	margin-bottom: 20rpx;
	background-color: #fff;
	border-radius: 20rpx;
	padding: 30rpx;
}


.list .left {
	width: 90rpx;
	height: 90rpx;
	border-radius: 15rpx;
	margin-right: 20rpx;
}

.list .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}


.list .right .name {
	width: 100%;
	color: #333;
	font-size: 30rpx;
	font-weight: bold;
	padding: 2rpx 0 14rpx;
	display: flex;
}

.list .right .desc {
	width: 100%;
	color: #999;
	font-size: 24rpx;
}